# Super Prediction Model - Environment Variables Template

# Server Configuration
PORT=8080
NODE_ENV=production
PYTHONPATH=/app

# API Keys (Optional - for enhanced data sources)
ALPHA_VANTAGE_API_KEY=demo
FINNHUB_API_KEY=demo
TWELVE_DATA_API_KEY=demo

# Database Configuration (if using persistent storage)
DATABASE_URL=sqlite:///./data/predictions.db

# Cache Configuration
REDIS_URL=redis://localhost:6379
CACHE_TTL=300

# Security
SECRET_KEY=your-secret-key-here
ALLOWED_HOSTS=localhost,127.0.0.1,yourdomain.com
CORS_ORIGINS=https://yourdomain.com,http://localhost:3000

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_BURST=10

# Monitoring
SENTRY_DSN=your-sentry-dsn
LOG_LEVEL=info
HEALTH_CHECK_INTERVAL=30

# Model Configuration
PREDICTION_CACHE_TTL=300
MAX_CONCURRENT_PREDICTIONS=10
MODEL_TIMEOUT=30

# Feature Flags
ENABLE_SOCIAL_SENTIMENT=true
ENABLE_GEOPOLITICAL_ANALYSIS=true
ENABLE_BANKING_SPECIALIZATION=true
ENABLE_INTRADAY_PREDICTIONS=true

# Performance
MAX_WORKERS=4
WORKER_TIMEOUT=120
KEEP_ALIVE=2