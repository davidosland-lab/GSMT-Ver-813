# Live Data Configuration
# Copy this file to .env and add your API keys

# Alpha Vantage API Key (Free tier: 25 calls/day, 5 calls/minute)
# Get your free key at: https://www.alphavantage.co/support/#api-key
ALPHA_VANTAGE_API_KEY=your_api_key_here

# Twelve Data API Key (Alternative - Free tier: 800 calls/day)
# Get your free key at: https://twelvedata.com/
TWELVE_DATA_API_KEY=your_api_key_here

# Yahoo Finance (No API key needed, but unofficial)
USE_YAHOO_FINANCE=true

# Data refresh settings
LIVE_DATA_ENABLED=true
DATA_CACHE_MINUTES=5
MAX_API_CALLS_PER_MINUTE=4

# Fallback to demo data if API limits reached
FALLBACK_TO_DEMO=true